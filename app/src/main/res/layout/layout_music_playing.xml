<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorDarkLight">

  <ImageView
      android:id="@+id/imageViewBand"
      android:layout_width="65dp"
      android:layout_height="65dp"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      android:src="@drawable/img_band"
      />

    <TextView
        android:id="@+id/textViewName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/imageViewBand"
        app:layout_constraintBottom_toTopOf="@id/textViewDescription"
        android:text="Midnight Drive"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:textSize="12sp"
        android:layout_marginTop="15dp"
        android:layout_marginHorizontal="10dp"
        />

    <TextView
        android:id="@+id/textViewDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/imageViewBand"
        app:layout_constraintTop_toTopOf="@id/textViewName"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="5dp"
        android:layout_marginHorizontal="10dp"
        android:text="Caspar John Valentine Kedros"
        android:textColor="@android:color/white"
        android:textSize="12sp"
        />

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/imageViewPlay"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/ic_baseline_audiotrack_24"
        android:layout_marginHorizontal="10dp"
        />

    <ImageView
        android:id="@+id/imageViewPlay"
        android:layout_width="25dp"
        android:layout_height="25dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/ic_baseline_play_arrow_24"
        android:layout_marginHorizontal="20dp"
        />

    <View
        android:layout_height="1dp"
        android:layout_width="0dp"
        app:layout_constraintTop_toBottomOf="@id/imageViewBand"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/colorPrimaryDark"
        />

</androidx.constraintlayout.widget.ConstraintLayout>